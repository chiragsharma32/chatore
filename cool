<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chatore - Late Night Food Delivery</title>
  <meta name="description" content="Chatore - Open all night 9 PM to 6 AM. Order hot maggi, sandwiches, cold coffee and more!">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
  
  <style>
    @keyframes twinkle {
      0%, 100% { opacity: 0.2; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.5); }
    }
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    @keyframes glow {
      0%, 100% { box-shadow: 0 0 20px rgba(251, 191, 36, 0.5); }
      50% { box-shadow: 0 0 40px rgba(251, 191, 36, 0.8); }
    }
    @keyframes slideDown {
      from { transform: translateY(-100%); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    @media (max-width: 640px) {
      body { font-size: 14px; }
    }
  </style>
</head>
<body>
  <div id="root"></div>

  <script type="text/babel">
    const { useState, useEffect } = React;

    const Moon = ({ className, style }) => (
      <svg className={className} style={style} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
        <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
      </svg>
    );

    const ShoppingBag = ({ className }) => (
      <svg className={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
        <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
        <path d="M3 6h18"></path>
        <path d="M16 10a4 4 0 0 1-8 0"></path>
      </svg>
    );

    const Package = ({ className }) => (
      <svg className={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
        <path d="m7.5 4.27 9 5.15"></path>
        <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"></path>
        <path d="m3.3 7 8.7 5 8.7-5"></path>
        <path d="M12 22V12"></path>
      </svg>
    );

    const Plus = ({ className }) => (
      <svg className={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
        <path d="M5 12h14"></path>
        <path d="M12 5v14"></path>
      </svg>
    );

    const Minus = ({ className }) => (
      <svg className={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
        <path d="M5 12h14"></path>
      </svg>
    );

    const Clock = ({ className }) => (
      <svg className={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12 6 12 12 16 14"></polyline>
      </svg>
    );

    function ChatoreWebsite() {
      const [selectedItems, setSelectedItems] = useState({});
      const [quantities, setQuantities] = useState({});
      const [customizations, setCustomizations] = useState({});
      const [orderSuccess, setOrderSuccess] = useState(false);
      const [contactNumber, setContactNumber] = useState('');
      const [address, setAddress] = useState('');
      const [description, setDescription] = useState('');
      const [showOrderForm, setShowOrderForm] = useState(false);
      const [showDeliveryForm, setShowDeliveryForm] = useState(false);
      const [isOpen, setIsOpen] = useState(true);
      const [timeUntilOpen, setTimeUntilOpen] = useState('');

      const OWNER_WHATSAPP = '7082518969';

      const menuItems = [
        { id: 1, name: 'Hot Maggi', price: 70, emoji: 'ðŸœ', canAddCheese: true },
        { id: 2, name: 'Grilled Sandwich', price: 80, emoji: 'ðŸ¥ª', canAddCheese: true },
        { id: 3, name: 'Cold Coffee', price: 60, emoji: 'â˜•', canAddCheese: false },
        { id: 4, name: 'Puff Puff', price: 0, emoji: 'ðŸ’¨', canAddCheese: false, addonOnly: true }
      ];

      useEffect(() => {
        const checkOpenStatus = () => {
          const now = new Date();
          const hours = now.getHours();
          const currentlyOpen = hours >= 21 || hours < 6;
          setIsOpen(currentlyOpen);

          if (!currentlyOpen) {
            let hoursUntil, minutesUntil;
            if (hours < 21) {
              hoursUntil = 21 - hours;
              minutesUntil = 60 - now.getMinutes();
              if (minutesUntil === 60) {
                minutesUntil = 0;
              } else {
                hoursUntil--;
              }
            }
            setTimeUntilOpen(`Opens in ${hoursUntil}h ${minutesUntil}m`);
          }
        };

        checkOpenStatus();
        const interval = setInterval(checkOpenStatus, 60000);
        return () => clearInterval(interval);
      }, []);

      const toggleItem = (itemId) => {
        const item = menuItems.find(i => i.id === itemId);
        
        if (item.addonOnly && !selectedItems[itemId]) {
          const hasOtherItems = Object.keys(selectedItems).some(id => 
            selectedItems[id] && parseInt(id) !== itemId
          );
          if (!hasOtherItems) {
            alert('Puff Puff can only be ordered with other items!');
            return;
          }
        }

        setSelectedItems(prev => ({
          ...prev,
          [itemId]: !prev[itemId]
        }));
        
        if (!quantities[itemId]) {
          setQuantities(prev => ({ ...prev, [itemId]: 1 }));
        }
      };

      const updateQuantity = (itemId, change) => {
        setQuantities(prev => {
          const newQty = Math.max(1, (prev[itemId] || 1) + change);
          return { ...prev, [itemId]: newQty };
        });
      };

      const toggleCheese = (itemId) => {
        setCustomizations(prev => ({
          ...prev,
          [itemId]: { ...prev[itemId], cheese: !prev[itemId]?.cheese }
        }));
      };

      const getSelectedItemsList = () => {
        return menuItems.filter(item => selectedItems[item.id]);
      };

      const getTotal = () => {
        return getSelectedItemsList().reduce((sum, item) => {
          const qty = quantities[item.id] || 1;
          let itemPrice = item.price || 0;
          if (customizations[item.id]?.cheese) {
            itemPrice += 10;
          }
          return sum + itemPrice * qty;
        }, 0);
      };

      const sendWhatsAppOrder = (isDelivery = false) => {
        if (!contactNumber.trim()) return;

        const selected = getSelectedItemsList();
        const timestamp = new Date().toLocaleString('en-IN', { timeZone: 'Asia/Kolkata' });
        
        let message = '';
        
        if (isDelivery) {
          message = `ðŸšš *NEW DELIVERY REQUEST*\n\n`;
          message += `ðŸ“¦ Service: Delivery from shop\n`;
          message += `ðŸ’° Amount: â‚¹30\n`;
          message += `ðŸ“± Contact: ${contactNumber}\n`;
          if (address.trim()) {
            message += `ðŸ“ Address: ${address}\n`;
          }
          if (description.trim()) {
            message += `ðŸ“ Details: ${description}\n`;
          }
          message += `ðŸ• Time: ${timestamp}`;
        } else {
          message = `ðŸ½ï¸ *NEW FOOD ORDER*\n\n`;
          message += `ðŸ“‹ *Items:*\n`;
          selected.forEach(item => {
            const qty = quantities[item.id] || 1;
            let itemPrice = item.price || 0;
            let itemName = item.name;
            
            if (customizations[item.id]?.cheese) {
              itemName = `Cheese ${item.name}`;
              itemPrice += 10;
            }
            
            if (itemPrice > 0) {
              message += `${item.emoji} ${itemName} x${qty} - â‚¹${itemPrice * qty}\n`;
            } else {
              message += `${item.emoji} ${itemName} x${qty}\n`;
            }
          });
          const total = getTotal();
          if (total > 0) {
            message += `\nðŸ’° *Total: â‚¹${total}*\n`;
          } else {
            message += `\n`;
          }
          message += `ðŸšš *Delivery: FREE*\n`;
          message += `ðŸ“± Contact: ${contactNumber}\n`;
          if (address.trim()) {
            message += `ðŸ“ Address: ${address}\n`;
          }
          if (description.trim()) {
            message += `ðŸ“ Note: ${description}\n`;
          }
          message += `ðŸ• Time: ${timestamp}`;
        }

        const encodedMessage = encodeURIComponent(message);
        const whatsappURL = `https://wa.me/91${OWNER_WHATSAPP}?text=${encodedMessage}`;
        window.open(whatsappURL, '_blank');

        setOrderSuccess(true);
        setTimeout(() => {
          setOrderSuccess(false);
          setSelectedItems({});
          setQuantities({});
          setCustomizations({});
          setContactNumber('');
          setAddress('');
          setDescription('');
          setShowOrderForm(false);
          setShowDeliveryForm(false);
        }, 3000);
      };

      return (
        <div className="min-h-screen bg-gradient-to-br from-indigo-950 via-purple-900 to-slate-900 relative overflow-hidden">
          <div className="fixed inset-0 overflow-hidden pointer-events-none">
            {[...Array(50)].map((_, i) => (
              <div
                key={i}
                className="absolute bg-white rounded-full"
                style={{
                  width: Math.random() * 2 + 1 + 'px',
                  height: Math.random() * 2 + 1 + 'px',
                  left: Math.random() * 100 + '%',
                  top: Math.random() * 100 + '%',
                  animation: `twinkle ${Math.random() * 3 + 2}s ease-in-out ${Math.random() * 3}s infinite`
                }}
              />
            ))}
          </div>

          {!isOpen && (
            <div className="fixed top-0 left-0 right-0 bg-red-600 text-white py-3 px-4 z-50 text-center shadow-lg" style={{ animation: 'slideDown 0.5s ease-out' }}>
              <div className="flex items-center justify-center gap-2 flex-wrap">
                <Clock className="w-5 h-5" />
                <span className="font-bold text-lg">We're Currently Closed</span>
                <span className="hidden sm:inline">â€¢</span>
                <span className="text-sm sm:text-base">{timeUntilOpen}</span>
                <span className="hidden sm:inline">â€¢</span>
                <span className="text-sm sm:text-base">Open 9 PM - 6 AM</span>
              </div>
            </div>
          )}

          <header className={`relative z-10 py-6 sm:py-8 ${!isOpen ? 'pt-20 sm:pt-24' : ''}`}>
            <div className="max-w-7xl mx-auto px-4">
              <div className="text-center">
                <Moon className="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 text-yellow-400 mx-auto mb-3 sm:mb-4" style={{ animation: 'float 3s ease-in-out infinite' }} />
                <h1 className="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-orange-400 to-yellow-500 mb-2 sm:mb-4 tracking-wider" style={{ textShadow: '0 0 30px rgba(251, 191, 36, 0.5)' }}>
                  CHATORE
                </h1>
                <p className="text-base sm:text-xl md:text-2xl text-yellow-300 font-semibold">
                  {isOpen ? 'ðŸŸ¢ Open Now' : 'ðŸ”´ Closed'} â€¢ 9 PM - 6 AM
                </p>
                <p className="text-sm sm:text-lg text-green-400 font-bold mt-2">ðŸšš FREE DELIVERY</p>
              </div>
            </div>
          </header>

          <main className="relative z-10 max-w-7xl mx-auto px-4 py-8 sm:py-12">
            <div className="mb-12 sm:mb-16">
              <h2 className="text-3xl sm:text-4xl font-bold text-white text-center mb-8 sm:mb-12">Our Menu</h2>
              <div className="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6 mb-8 sm:mb-12 max-w-6xl mx-auto">
                {menuItems.map((item) => (
                  <div
                    key={item.id}
                    className={`rounded-2xl sm:rounded-3xl p-6 sm:p-8 transition-all duration-300 relative ${
                      selectedItems[item.id]
                        ? 'bg-gradient-to-br from-yellow-500 to-orange-500 shadow-2xl border-3 border-yellow-300'
                        : 'bg-slate-800 bg-opacity-60 backdrop-blur-lg border-2 border-yellow-600 hover:border-yellow-400'
                    } ${!isOpen ? 'opacity-50' : ''}`}
                    style={selectedItems[item.id] ? { animation: 'glow 2s ease-in-out infinite' } : {}}
                  >
                    {item.addonOnly && (
                      <div className="absolute top-3 right-3 bg-purple-600 text-white text-xs px-3 py-1 rounded-full font-bold">
                        Add-on Only
                      </div>
                    )}
                    <div className="text-5xl sm:text-6xl md:text-7xl mb-4 text-center">{item.emoji}</div>
                    <h3 className={`text-xl sm:text-2xl md:text-3xl font-bold text-center mb-3 text-white`}>
                      {item.name}
                    </h3>
                    {item.price > 0 ? (
                      <p className={`text-2xl sm:text-3xl md:text-4xl font-black text-center mb-4 ${selectedItems[item.id] ? 'text-white' : 'text-yellow-400'}`}>
                        â‚¹{item.price}
                      </p>
                    ) : (
                      <div className="mb-4 h-8 sm:h-10"></div>
                    )}

                    {selectedItems[item.id] && item.canAddCheese && (
                      <div className="mb-4 flex items-center justify-center">
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            toggleCheese(item.id);
                          }}
                          className={`px-4 py-2 rounded-full text-sm font-bold transition-all ${
                            customizations[item.id]?.cheese
                              ? 'bg-white text-orange-500'
                              : 'bg-orange-100 bg-opacity-30 text-white border border-white'
                          }`}
                        >
                          {customizations[item.id]?.cheese ? 'âœ“ Extra Cheese (+â‚¹10)' : 'Add Cheese (+â‚¹10)'}
                        </button>
                      </div>
                    )}

                    {selectedItems[item.id] ? (
                      <div className="flex items-center justify-center gap-3 sm:gap-4 mb-3">
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            updateQuantity(item.id, -1);
                          }}
                          className="bg-white text-orange-500 w-8 h-8 sm:w-10 sm:h-10 rounded-full flex items-center justify-center font-bold hover:bg-gray-100 transition-all"
                        >
                          <Minus className="w-4 h-4 sm:w-5 sm:h-5" />
                        </button>
                        <span className="text-2xl sm:text-3xl font-black text-white min-w-12 text-center">
                          {quantities[item.id] || 1}
                        </span>
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            updateQuantity(item.id, 1);
                          }}
                          className="bg-white text-orange-500 w-8 h-8 sm:w-10 sm:h-10 rounded-full flex items-center justify-center font-bold hover:bg-gray-100 transition-all"
                        >
                          <Plus className="w-4 h-4 sm:w-5 sm:h-5" />
                        </button>
                      </div>
                    ) : null}

                    <button
                      onClick={() => toggleItem(item.id)}
                      disabled={!isOpen}
                      className={`w-full py-2 sm:py-3 rounded-full text-base sm:text-lg font-bold transition-all ${
                        selectedItems[item.id]
                          ? 'bg-white text-orange-500 hover:bg-gray-100'
                          : 'bg-yellow-500 text-slate-900 hover:bg-yellow-400'
                      } disabled:opacity-50 disabled:cursor-not-allowed`}
                    >
                      {selectedItems[item.id] ? 'Remove' : 'Add to Order'}
                    </button>
                  </div>
                ))}
              </div>

              <div className="text-center">
                <button
                  onClick={() => setShowOrderForm(true)}
                  disabled={getSelectedItemsList().length === 0 || !isOpen}
                  className="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-8 sm:px-12 py-4 sm:py-5 rounded-full text-lg sm:text-2xl font-black hover:from-green-600 hover:to-emerald-700 transition-all transform hover:scale-105 shadow-2xl disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
                >
                  <ShoppingBag className="inline-block w-6 h-6 sm:w-8 sm:h-8 mr-2 sm:mr-3" />
                  ORDER NOW
                </button>
                {getSelectedItemsList().length > 0 && (
                  <div className="mt-4">
                    <p className="text-yellow-300 text-lg sm:text-xl font-semibold">
                      Total: â‚¹{getTotal()}
                    </p>
                    <p className="text-green-400 text-sm sm:text-base font-bold mt-1">
                      + FREE Delivery ðŸŽ‰
                    </p>
                  </div>
                )}
              </div>
            </div>

            <div className={`bg-gradient-to-br from-purple-900 to-indigo-900 rounded-2xl sm:rounded-3xl p-6 sm:p-10 border-3 border-purple-500 shadow-2xl ${!isOpen ? 'opacity-50' : ''}`}>
              <div className="text-center">
                <Package className="w-12 h-12 sm:w-16 sm:h-16 text-purple-300 mx-auto mb-3 sm:mb-4" />
                <h2 className="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-3 sm:mb-4">Want Anything Delivered from Shop?</h2>
                <p className="text-purple-200 text-base sm:text-lg md:text-xl mb-4 sm:mb-6">Get anything you need from nearby shops delivered to you!</p>
                <p className="text-yellow-400 text-2xl sm:text-3xl font-black mb-6 sm:mb-8">Delivery Cost: â‚¹30</p>
                <button
                  onClick={() => setShowDeliveryForm(true)}
                  disabled={!isOpen}
                  className="bg-gradient-to-r from-purple-500 to-pink-600 text-white px-8 sm:px-12 py-4 sm:py-5 rounded-full text-lg sm:text-2xl font-black hover:from-purple-600 hover:to-pink-700 transition-all transform hover:scale-105 shadow-2xl disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
                >
                  REQUEST DELIVERY
                </button>
              </div>
            </div>
          </main>

          {showOrderForm && (
            <div className="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center p-4 z-50 backdrop-blur-sm overflow-y-auto">
              <div className="bg-gradient-to-br from-slate-800 via-purple-900 to-slate-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 max-w-lg w-full border-3 sm:border-4 border-yellow-500 shadow-2xl my-4">
                <h2 className="text-2xl sm:text-3xl md:text-4xl font-bold text-yellow-400 mb-4 sm:mb-6 text-center">Complete Your Order</h2>
                
                <div className="bg-white bg-opacity-10 rounded-xl sm:rounded-2xl p-4 sm:p-6 mb-4 sm:mb-6 max-h-48 overflow-y-auto">
                  <h3 className="text-white font-bold text-lg sm:text-xl mb-3 sm:mb-4">Selected Items:</h3>
                  {getSelectedItemsList().map(item => {
                    const qty = quantities[item.id] || 1;
                    let itemPrice = item.price || 0;
                    let itemName = item.name;
                    
                    if (customizations[item.id]?.cheese) {
                      itemName = `Cheese ${item.name}`;
                      itemPrice += 10;
                    }
                    
                    return (
                      <div key={item.id} className="flex justify-between items-center mb-2 text-white text-sm sm:text-base">
                        <span>{item.emoji} {itemName} x{qty}</span>
                        {itemPrice > 0 && <span className="font-bold text-yellow-400">â‚¹{itemPrice * qty}</span>}
                      </div>
                    );
                  })}
                  {getTotal() > 0 && (
                    <div className="border-t border-white border-opacity-30 mt-3 sm:mt-4 pt-3 sm:pt-4">
                      <div className="flex justify-between items-center text-lg sm:text-xl font-bold mb-2">
                        <span className="text-white">Subtotal:</span>
                        <span className="text-yellow-400">â‚¹{getTotal()}</span>
                      </div>
                      <div className="flex justify-between items-center text-base sm:text-lg font-bold mb-2">
                        <span className="text-green-400">Delivery:</span>
                        <span className="text-green-400">FREE</span>
                      </div>
                      <div className="flex justify-between items-center text-xl sm:text-2xl font-black border-t border-white border-opacity-30 pt-2">
                        <span className="text-white">Total:</span>
                        <span className="text-yellow-400">â‚¹{getTotal()}</span>
                      </div>
                    </div>
                  )}
                </div>

                <div className="space-y-3 sm:space-y-4 mb-4 sm:mb-6">
                  <div>
                    <label className="block text-white font-bold mb-2 text-sm sm:text-base md:text-lg">
                      Contact Number <span className="text-red-400">*</span>
                    </label>
                    <input
                      type="tel"
                      value={contactNumber}
                      onChange={(e) => {
                        const value = e.target.value.replace(/\D/g, '');
                        if (value.length <= 10) {
                          setContactNumber(value);
                        }
                      }}
                      placeholder="Enter 10 digit mobile number"
                      className="w-full px-4 sm:px-5 py-3 sm:py-4 rounded-xl text-base sm:text-lg bg-white bg-opacity-20 text-white placeholder-gray-400 border-2 border-yellow-500 border-opacity-30 focus:border-yellow-500 focus:outline-none"
                    />
                    {contactNumber && contactNumber.length !== 10 && (
                      <p className="text-red-400 text-sm mt-1">Please enter a valid 10 digit number</p>
                    )}
                  </div>

                  <div>
                    <label className="block text-white font-bold mb-2 text-sm sm:text-base md:text-lg">
                      Delivery Address <span className="text-red-400">*</span>
                    </label>
                    <textarea
                      value={address}
                      onChange={(e) => setAddress(e.target.value)}
                      placeholder="Enter your delivery address"
                      rows={2}
                      className="w-full px-4 sm:px-5 py-3 sm:py-4 rounded-xl text-base sm:text-lg bg-white bg-opacity-20 text-white placeholder-gray-400 border-2 border-yellow-500 border-opacity-30 focus:border-yellow-500 focus:outline-none resize-none"
                    ></textarea>
                  </div>

                  <div>
                    <label className="block text-white font-bold mb-2 text-sm sm:text-base md:text-lg">
                      Special Instructions (Optional)
                    </label>
                    <textarea
                      value={description}
                      onChange={(e) => setDescription(e.target.value)}
                      placeholder="Any special instructions..."
                      rows={2}
                      className="w-full px-4 sm:px-5 py-3 sm:py-4 rounded-xl text-base sm:text-lg bg-white bg-opacity-20 text-white placeholder-gray-400 border-2 border-yellow-500 border-opacity-30 focus:border-yellow-500 focus:outline-none resize-none"
                    ></textarea>
                  </div>
                </div>

                <div className="flex gap-3 sm:gap-4">
                  <button
                    onClick={() => setShowOrderForm(false)}
                    className="flex-1 bg-gray-600 text-white py-3 sm:py-4 rounded-full text-base sm:text-lg md:text-xl font-bold hover:bg-gray-700 transition-all"
                  >
                    Cancel
                  </button>
                  <button
                    onClick={() => sendWhatsAppOrder(false)}
                    disabled={!contactNumber.trim() || contactNumber.length !== 10 || !address.trim()}
                    className="flex-1 bg-gradient-to-r from-green-500 to-emerald-600 text-white py-3 sm:py-4 rounded-full text-base sm:text-lg md:text-xl font-bold hover:from-green-600 hover:to-emerald-700 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    Send Order ðŸ“²
                  </button>
                </div>
              </div>
            </div>
          )}

          {showDeliveryForm && (
            <div className="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center p-4 z-50 backdrop-blur-sm overflow-y-auto">
              <div className="bg-gradient-to-br from-slate-800 via-purple-900 to-slate-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 max-w-lg w-full border-3 sm:border-4 border-purple-500 shadow-2xl my-4">
                <h2 className="text-2xl sm:text-3xl md:text-4xl font-bold text-purple-300 mb-4 sm:mb-6 text-center">Delivery Request</h2>
                
                <div className="bg-white bg-opacity-10 rounded-xl sm:rounded-2xl p-4 sm:p-6 mb-4 sm:mb-6 text-center">
                  <Package className="w-12 h-12 sm:w-16 sm:h-16 text-purple-300 mx-auto mb-3 sm:mb-4" />
                  <p className="text-white text-base sm:text-lg md:text-xl mb-2">We'll pick up anything you need from nearby shops</p>
                  <p className="text-yellow-400 text-2xl sm:text-3xl font-bold">Delivery Cost: â‚¹30</p>
                </div>

                <div className="space-y-3 sm:space-y-4 mb-4 sm:mb-6">
                  <div>
                    <label className="block text-white font-bold mb-2 text-sm sm:text-base md:text-lg">
                      Contact Number <span className="text-red-400">*</span>
                    </label>
                    <input
                      type="tel"
                      value={contactNumber}
                      onChange={(e) => {
                        const value = e.target.value.replace(/\D/g, '');
                        if (value.length <= 10) {
                          setContactNumber(value);
                        }
                      }}
                      placeholder="Enter 10 digit mobile number"
                      className="w-full px-4 sm:px-5 py-3 sm:py-4 rounded-xl text-base sm:text-lg bg-white bg-opacity-20 text-white placeholder-gray-400 border-2 border-purple-500 border-opacity-30 focus:border-purple-500 focus:outline-none"
                    />
                    {contactNumber && contactNumber.length !== 10 && (
                      <p className="text-red-400 text-sm mt-1">Please enter a valid 10 digit number</p>
                    )}
                  </div>

                  <div>
                    <label className="block text-white font-bold mb-2 text-sm sm:text-base md:text-lg">
                      Delivery Address <span className="text-red-400">*</span>
                    </label>
                    <textarea
                      value={address}
                      onChange={(e) => setAddress(e.target.value)}
                      placeholder="Enter your delivery address"
                      rows={2}
                      className="w-full px-4 sm:px-5 py-3 sm:py-4 rounded-xl text-base sm:text-lg bg-white bg-opacity-20 text-white placeholder-gray-400 border-2 border-purple-500 border-opacity-30 focus:border-purple-500 focus:outline-none resize-none"
                    ></textarea>
                  </div>

                  <div>
                    <label className="block text-white font-bold mb-2 text-sm sm:text-base md:text-lg">
                      What do you need? (Optional)
                    </label>
                    <textarea
                      value={description}
                      onChange={(e) => setDescription(e.target.value)}
                      placeholder="Tell us what you want delivered..."
                      rows={2}
                      className="w-full px-4 sm:px-5 py-3 sm:py-4 rounded-xl text-base sm:text-lg bg-white bg-opacity-20 text-white placeholder-gray-400 border-2 border-purple-500 border-opacity-30 focus:border-purple-500 focus:outline-none resize-none"
                    ></textarea>
                  </div>
                </div>

                <div className="flex gap-3 sm:gap-4">
                  <button
                    onClick={() => setShowDeliveryForm(false)}
                    className="flex-1 bg-gray-600 text-white py-3 sm:py-4 rounded-full text-base sm:text-lg md:text-xl font-bold hover:bg-gray-700 transition-all"
                  >
                    Cancel
                  </button>
                  <button
                    onClick={() => sendWhatsAppOrder(true)}
                    disabled={!contactNumber.trim() || contactNumber.length !== 10 || !address.trim()}
                    className="flex-1 bg-gradient-to-r from-purple-500 to-pink-600 text-white py-3 sm:py-4 rounded-full text-base sm:text-lg md:text-xl font-bold hover:from-purple-600 hover:to-pink-700 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    Send Request ðŸ“²
                  </button>
                </div>
              </div>
            </div>
          )}

          {orderSuccess && (
            <div className="fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 p-4">
              <div className="bg-gradient-to-br from-green-500 to-emerald-600 text-white p-8 sm:p-12 rounded-2xl sm:rounded-3xl text-center shadow-2xl transform scale-105">
                <div className="text-6xl sm:text-7xl md:text-8xl mb-4 sm:mb-6 animate-bounce">âœ…</div>
                <h3 className="text-2xl sm:text-3xl md:text-4xl font-black mb-3 sm:mb-4">Opening WhatsApp!</h3>
                <p className="text-lg sm:text-xl md:text-2xl">Please send the message to complete your order</p>
              </div>
            </div>
          )}

          <footer className="relative z-10 bg-black bg-opacity-60 text-white text-center py-6 sm:py-8 mt-12 sm:mt-16">
            <p className="text-lg sm:text-xl font-semibold mb-2">ðŸ“ž Contact: 7082518969</p>
            <p className="text-yellow-400 text-base sm:text-lg font-semibold">Craving Something? We've Got You Covered! ðŸŒŸ</p>
          </footer>
        </div>
      );
    }

    ReactDOM.render(<ChatoreWebsite />, document.getElementById('root'));
  </script>
</body>
</html>
